{
  "compilerOptions": {
    "target": "es6",                          
    "module": "esnext",                       
    "jsx": "react",                          
    "strict": true,                           
    "esModuleInterop": true,                  
    "moduleResolution": "node",               
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "setupTests.ts"
  ],
  "exclude": ["node_modules"]
}
